{
  "name": "resume",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3333",
    "build": "next build",
    "build:next": "next build && node scripts/prepare-standalone.js",
    "electron:dev": "electron .",
    "electron:build": "node scripts/ensure-node-binary.js && npm run build:next && electron-builder --win",
    "start": "next start -H 0.0.0.0 -p 3333",
    "lint": "eslint"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "*",
    "openai": "^4.0.0",
    "@sparticuz/chromium": "^131.0.0",
    "@supabase/supabase-js": "^2.89.0",
    "jszip": "^3.10.1",
    "mustache": "^4.2.0",
    "next": "16.1.1",
    "pdfkit": "^0.17.2",
    "puppeteer": "^21.8.0",
    "puppeteer-core": "^21.8.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "@tailwindcss/postcss": "^4",
    "@types/jszip": "^3.4.1",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.resume.app",
    "productName": "Resume",
    "directories": { "output": "dist" },
    "files": ["electron", "package.json"],
    "extraResources": [
      { "from": ".next/standalone", "to": "standalone" },
      { "from": ".next/standalone/node_modules", "to": "standalone/node_modules" },
      { "from": "node/win", "to": "node" }
    ],
    "win": { "target": "portable", "signAndEditExecutable": false, "compression": "maximum" }
  }
}
